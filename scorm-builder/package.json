{
    "name": "learning-platform-scorm-builder",
    "version": "1.0.0",
    "description": "Production SCORM 2004 package generator for task-based learning with chat integration",
    "main": "web-ui/server.js",
    "scripts": {
        "build": "node build.js",
        "build:all": "node build.js --all",
        "build:topic": "node build.js --topic $npm_config_topic --dev --backend https://learning-platform-ecosystem.onrender.com",
        "build:prod": "node build.js --topic $npm_config_topic --backend https://learning-platform-ecosystem.onrender.com",
        "clean": "rm -rf output/* temp/* test-output/*",
        "clean:test": "rm -rf test-output && mkdir -p test-output",
        "extract": "node scripts/extract-topic.js",
        "validate": "node scripts/validate-topics.js",
        "test:topic": "npm run validate && npm run build:topic && npm run extract && npm run serve:test",
        "serve:test": "node test-server.js",
        "lint": "eslint .",
        "prestart": "npm run validate",
        "start:ui": "node web-ui/server.js",
        "dev:ui": "nodemon web-ui/server.js",
        "start": "node web-ui/server.js",
        "render-postbuild": "npm run clean && mkdir -p web-ui/public/downloads && mkdir -p output && mkdir -p test-output"
    },
    "dependencies": {
        "archiver": "^6.0.1",
        "chalk": "^4.1.2",
        "commander": "^11.0.0",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "fs-extra": "^11.1.1",
        "joi": "^17.9.2",
        "multer": "^2.0.2",
        "mustache": "^4.2.0",
        "unzipper": "^0.12.3",
        "uuid": "^9.0.0",
        "xmldom": "^0.6.0",
        "xpath": "^0.0.33"
    },
    "devDependencies": {
        "eslint": "^8.46.0",
        "jest": "^29.6.2",
        "nodemon": "^3.0.1"
    },
    "keywords": [
        "scorm",
        "scorm-2004",
        "elearning",
        "lms",
        "education",
        "chat-integration"
    ],
    "engines": {
        "node": ">=16.0.0"
    }
}
