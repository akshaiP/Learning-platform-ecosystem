{
    "name": "learning-platform-scorm-builder",
    "version": "1.0.0",
    "description": "Production SCORM 2004 package generator for task-based learning with chat integration",
    "main": "web-ui/server.js",
    "scripts": {
        "build": "node build.js",
        "build:all": "node build.js --all",
        "build:topic": "node scripts/build-topic.js --dev --backend https://learning-platform-ecosystem.onrender.com",
        "build:prod": "node build.js --backend https://learning-platform-ecosystem.onrender.com",
        "clean": "rimraf output/* temp/* test-output/*",
        "clean:test": "rimraf test-output && mkdirp test-output",
        "extract": "node scripts/extract-topic.js",
        "validate": "node scripts/validate-topics.js",
        "validate:cloud": "node scripts/validate-cloud-topics.js",
        "test:topic": "node scripts/test-topic.js",
        "serve:test": "node test-server.js",
        "lint": "eslint .",
        "prestart": "echo 'Starting SCORM Builder Web UI...'",
        "start:ui": "node web-ui/server.js",
        "dev:ui": "nodemon web-ui/server.js",
        "start": "node web-ui/server.js",
        "render-postbuild": "npm run clean && mkdirp web-ui/public/downloads && mkdirp output && mkdirp test-output"
    },
    "dependencies": {
        "archiver": "^6.0.1",
        "axios": "^1.13.1",
        "chalk": "^4.1.2",
        "commander": "^11.0.0",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "firebase-admin": "^11.11.0",
        "fs-extra": "^11.1.1",
        "joi": "^17.9.2",
        "multer": "^2.0.2",
        "mustache": "^4.2.0",
        "unzipper": "^0.12.3",
        "uuid": "^9.0.0",
        "xmldom": "^0.6.0",
        "xpath": "^0.0.33"
    },
    "devDependencies": {
        "eslint": "^8.46.0",
        "jest": "^29.6.2",
        "mkdirp": "^3.0.1",
        "nodemon": "^3.0.1",
        "rimraf": "^5.0.1",
        "shadcn": "^3.5.0"
    },
    "keywords": [
        "scorm",
        "scorm-2004",
        "elearning",
        "lms",
        "education",
        "chat-integration"
    ],
    "engines": {
        "node": ">=16.0.0"
    }
}
